@model CursoMVC.Models.Category

@{
    ViewData["Title"] = "Deletar";
}

<h1>Delete</h1>

<h3>Deseja deletar está categoria?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger mr-2" /> 
        <a class="btn btn-outline-warning" asp-action="Index">Voltar</a>
    </form>
</div>
